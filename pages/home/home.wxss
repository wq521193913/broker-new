  line-height: normal;
}
.swiper_container {
    height: 155rpx;
    width: 80vw;
    border: 1px solid #fff;
  }
  
  .swiper_item {
    font-size: 25rpx;
    overflow: hidden;
    text-overflow: ellipsis;
   white-space: nowrap;
   letter-spacing: 2px;
 }

 .example {
  display: block;
  width: 100%;
  height: 100rpx;
}

.marquee_box {
  width: 100%;
  position: relative;
}

.marquee_text {
